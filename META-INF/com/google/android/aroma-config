"<u>COMPLETED</u>",
"REBOOT TO THE RECOVERY OR LEAVE THE PATCH BY PRESSING <b>'OK'</b>",
"@none",
###################
"SELECT TO REBOOT TO THE RECOVERY","0","REBOOT2"
);
###################
if
getvar("REBOOT2")=="1"
then
reboot("onfinish","recovery");
endif;
