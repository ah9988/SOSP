);
###################
if
getvar("MENU")=="1"
then
goto("MENU");
endif;
###################
checkviewbox(
"<u>COMPLETED</u>",
"REBOOT TO THE SYSTEM OR CONTINUE BY PRESSING <b>'OK'</b>",
"@none",
###################
"SELECT TO REBOOT TO THE SYSTEM","0","REBOOT1"
);
###################
if
getvar("REBOOT1")=="1"
then
reboot("onfinish");
endif;
###################
